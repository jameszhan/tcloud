<script type="text/ng-template" id="networktype_new.html">
<div class="modal-header">
  <a class="close" ng-click="close()">&times;</a>
  <div class="input-prepend input-append">
    <h4>网络配置</h4>       
  </div>
</div>
<div class="modal-body">
  <form class="form-horizontal">
    <div class="control-group">
      <label for="name" class="control-label">名称：</label>
      <div class="controls">
        <input type="text" ng-model="network.name" class="input"/>
      </div>
    </div>
    <div class="control-group">
      <label for="name" class="control-label">IP网段：</label>
      <div class="controls">
        <input type="text" ng-model="network.name" class="input"/>
        <label>提示：通常来说应该填写ipv4专用地址，例如：192.168.0.0/24, 10.0.0.0/24</label>
        <table class="table table-bordered table-striped">
          <tr>
            <th>子网掩码</th>
            <th>广播地址</th>
            <th>网关</th>
            <th>数量</th>
            <th>类型</th>
          </tr>
          <tr>
            <td>255.255.255.0</td>
            <td>172.16.10.255</td>
            <td>172.16.10.1</td>
            <td>256</td>
            <td>C类地址</td>
          </tr>
        </table>
      </div>
    </div>
    <div class="control-group">
      <label for="name" class="control-label">启用DHCP：</label>
      <div class="controls">
        <input type="checkbox" class="input-mini"/>
      </div>
    </div>
    <div class="control-group">
      <label for="name" class="control-label">开始：</label>
      <div class="controls">
        <input type="text" ng-model="network.name" class="input"/>
      </div>
    </div>
    <div class="control-group">
      <label for="name" class="control-label">结束：</label>
      <div class="controls">
        <input type="text" ng-model="network.name" class="input"/>
      </div>
    </div>
    <div class="control-group">
      <label for="name" class="control-label">网络类型：</label>
      <div class="controls">
        <label class="radio radio-top">
          <input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">
          <h5>隔离网络</h5>
        </label>
        <label class="radio">
          <input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">
          <h5>nat网络</h5>  
        </label>
        <label class="radio">
          <input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">
          <h5>路由网络</h5>
        </label>
      </div>
    </div>
    <div class="control-group">
      <label for="name" class="control-label">目标设备：</label>
      <div class="controls">
        <select ng-model="vm.host" ng-options="h.name for h in cluster.hosts" class="span2">
          <option value="">任意</option>
        </select>
      </div>
    </div>
    <div class="control-group">
      <label for="name" class="control-label">关联集群：</label>
      <div class="controls">
        <input type="checkbox" class="input-mini"/> qa
        <input type="checkbox" class="input-mini"/> ceshi
        <input type="checkbox" class="input-mini"/> dev
      </div>
    </div>
  </form>
</div>
<div class="modal-footer">
  <a data-dismiss="modal" class="btn" ng-click="close()">关闭</a>
  <a data-dismiss="modal" class="btn btn-primary">保存</a>
</div>
</script>